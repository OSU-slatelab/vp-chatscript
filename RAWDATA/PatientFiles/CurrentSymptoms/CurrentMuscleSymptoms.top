# Back Injury - I have defined back_injury as a concept in MedicalConcepts.top

topic: ~currentbackinjury keep repeat (~back_injury !pain hurt injure injury trauma back work area)


	u: ($pasthistory) respond(~pastbackinjury) ^fail(TOPIC)
	u: ($family) respond(~familybackinjury) ^fail(TOPIC)


# Onset  ***************

#! How did the back injury start
	u: How_did_the_back_injury_start (how did the back injury start)   ^factanswer("I have no back injury.")
	u: (!"how long" how * [~back_injury ~itwords] * [~start happen]) ^reuse (How_did_the_back_injury_start)
	u: (how * [injure hurt] * back) ^reuse (How_did_the_back_injury_start)
	u: (what * circumstance * ~back_injury) ^reuse (How_did_the_back_injury_start)

#! Have you had any trauma to your back
	u: Have_you_had_any_back_trauma (have you had any trauma to your back)    ^factanswer("No.")
	u: ([hit trauma] * [~back_injury ~itwords area back]) ^reuse (Have_you_had_any_back_trauma)
	u: ([~back_injury ~itwords area back] * trauma) ^reuse (Have_you_had_any_back_trauma)

#! Is your back injury on one side
	u: Is_your_back_injury_on_one_side (is your back injury on one side)    ^factanswer("I have no back injury.")
	u: ([~back_injury ~itwords] * ~pain_locations) ^reuse (Is_your_back_injury_on_one_side)

#! Did it happen at work
	u: Did_it_happen_at_work (did it happen at work)    ^factanswer("I have no back injury.")
	u: ([~back_injury ~itwords] * ~start * [work job]) ^reuse (Did_it_happen_at_work)

#! Have you had any other back injuries
	u: Have_you_had_any_other_back_injuries (have you had any other back injuries)   ^factanswer("I have no back injury.")
	u: (other *~2 ~back_injury) ^reuse (Have_you_had_any_other_back_injuries)


