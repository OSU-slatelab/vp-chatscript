# Joint Pain - I have defined joint pain as a concept in MedicalConcepts.top

topic: ~currentjointpain keep repeat (~joint ~pain_descriptors grip twist screw unscrew ~joint_pain)

	u: ($pasthistory) respond(~pastjointpain) ^fail(TOPIC)
	u: ($family) respond(~familyjointpain) ^fail(TOPIC)


#! Have you noticed any joint weakness
	u: Have_you_noticed_joint_weakness (have you noticed joint weakness)  ^factanswer("My joints are not weak.")
	u: ([notice experience have] * [~joint hand] [weak weakness]) ^reuse (Have_you_noticed_joint_weakness)
	u: ([notice experience have] * [weakness strong strength] * [~joint hand]) ^reuse (Have_you_noticed_joint_weakness)

#! Can you grip
	u: Can_you_grip (can you grip)  ^factanswer("I have no trouble with grip.")
	u: ([can able] * [grip twist screw unscrew use]) ^reuse (Can_you_grip)

#! Are your joints swollen
	u: Are_your_joints_swollen (are your joints swollen)   ^factanswer("My joints seem fine.")
	u: ([~joint ~itwords] * [swollen swell pop crackle]) ^reuse (Are_your_joints_swollen)
	u: ([swollen swell pop crackle] * [~joint ~itwords]) ^reuse (Are_your_joints_swollen)

#! Did you hurt your joint
	u: Did_you_hurt_your_joints (did you hurt your joints)    ^factanswer("I didn't hurt them.")
	u: (!where !when [injure hurt] * [~joint ~itwords]) ^reuse (Did_you_hurt_your_joints)

#! Can you move your joints
	u: Can_you_move_your_joints (can you move your joints)    ^factanswer("I can move my joints.")
	u: ([bend move wiggle] * [~joint ~itwords]) ^reuse (Can_you_move_your_joints)

#! Have you noticed any joint pain
	u: Have_you_noticed_joint_pain (have you noticed joint pain)  ^factanswer("My joints do not hurt.")
	u: ([notice experience] * ~joint) ^reuse (Have_you_noticed_joint_pain)
	u: ([notice experience] * ~joint_pain) ^reuse (Have_you_noticed_joint_pain)

#! Which joints hurt
	u: Which_joints_hurt (which joints hurt)  ^factanswer("None of my joints hurt.")
	u: ([both which] * [one side ~joint] * [hurt painful ache swell]) ^reuse (Which_joints_hurt)
	u: ([hurt painful ache swell pain] * [both one] * ~joint) ^reuse (Which_joints_hurt)
	u: ([both which] * [one side ~joint]>) ^reuse (Which_joints_hurt)

#! Do your joints ache
	u: Do_your_joints_ache (do your joints ache)   ^factanswer("My joints feel fine.")
	u: (!which [~joint they] * [~pain_descriptors tender hurt]) ^reuse (Do_your_joints_ache)
