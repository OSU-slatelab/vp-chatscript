# Alcohol use

topic: ~alcoholuse keep repeat (~alcoholic_beverage "eye opener" "eye-opener" drink guilty intake social socially use)

	u: ( $$family) ^fail(TOPIC)

#! How much do you drink
	u: How_much_do_you_drink (how much do you drink)  ^factanswer("I don't drink.")
	u: (!water how * [drink ~alcoholic_beverage much often many]) ^reuse (How_much_do_you_drink)
	u: (!water [drink ~alcoholic_beverage] * [day week month]) ^reuse (How_much_do_you_drink)
	u: (!water [beer wine] * [day week month]) ^reuse (How_much_do_you_drink) # don't know why I need this to catch beers and wine

#! Has anyone thought you have an alcohol problem
	u: Anyone_thought_alcohol_problem (anyone thought you have an alcohol problem)  ^factanswer("Never.")
	u: ([anyone anybody] * have * [drink ~alcoholic_beverage]) ^reuse (Anyone_thought_alcohol_problem)

#! Do you drink
	u: Do_you_drink (do you drink)  ^factanswer("I don't drink.")
	u: ([drink use consume any] * [social socially ~alcoholic_beverage]) ^reuse (Do_you_drink)
	u: ([social ~alcoholic_beverage] * [drink use consume consumption intake]) ^reuse (Do_you_drink)
	u: (![what where when] [drink ~alcoholic_beverage]) ^reuse (Do_you_drink)

#! Do you feel guilty about your drinking
	u: Do_you_feel_guilty_about_your_drinking (do you feel guilty about your drinking)  ^factanswer("Never.")
	u: ([guilt guilty] * [drink ~alcoholic_beverage]) ^reuse (Do_you_feel_guilty_about_your_drinking)
	u: ([drink ~alcoholic_beverage] * ["too much" "too frequently"]) ^reuse (Do_you_feel_guilty_about_your_drinking)

#! Do you ever need an eye opener
	u: Do_you_ever_need_an_eye_opener (do you ever need an eye opener)  ^factanswer("I don't think so.")
	u: (drink * morning) ^reuse (Do_you_ever_need_an_eye_opener)
	u: ([eye-opener]["eye opener"]) ^reuse (Do_you_ever_need_an_eye_opener)
	u: (<< alcohol [problem trouble] >>) ^reuse (Do_you_ever_need_an_eye_opener)

#! Have you considered reducing your alcohol use
	u: Have_you_considered_reducing_alcohol (have you considered reducing your alcohol use) ^factanswer("I don't really drink that much.")
	u: ([think consider need] * [reduce cut decrease] * [drink ~alcoholic_beverage]) ^reuse (Have_you_considered_reducing_alcohol)

#! Ever felt annoyed by people confronting you about your alcohol use
	u: Ever_felt_annoyed_about_alcohol (ever felt annoyed by people confronting you about your alcohol use)  ^factanswer("Never.")
	u: ([annoy frustrate] * [drink ~alcoholic_beverage]) ^reuse (Ever_felt_annoyed_about_alcohol)

#! What kind of drinks
	u: What_kind_of_drinks (what kind of drinks) ^factanswer("I don't drink.")
	u: ([kind type brand] * [alcohol drinks]) ^reuse (What_kind_of_drinks)

# ADD TO SPREADSHEET
#! How many
	u: How_many_drinks (how many) ^factanswer("I don't drink.")
	u: (number * drinks) ^reuse (How_many_drinks)

