
# ***************************************************************************************************
# Activity

topic: ~normal_activity keep repeat bot=patient1,patient2,patient3,patient4,patient5,patient6,patient7,patient8,patient9,patient10,patient11,patient12,patient13,patient14,patient15,patient16,patient17,patient18,patient19 (exercise ~exerciselist activity rest drive "work out" active  energy bedridden shape tired walk)

	u: ( $$family) ^fail(TOPIC)

#! How often do you exercise
	u: How_often_do_you_exercise (how often do you exercise)  ^factanswer("Not very often.")
	u: (<< [often lot] [exercise "work out"] >>) ^reuse (How_often_do_you_exercise)

#! Do you have any trouble exercising
	u: Do_you_have_any_trouble_exercising (do you have any trouble exercising) ^factanswer("I have no problems exercising.")
	u: ([trouble problems ~breathing_problems] * [exercise walk "workout"])  ^reuse (Do_you_have_any_trouble_exercising)

#! Do you exercise
	u: Do_you_exercise (do you exercise) ^factanswer("I don't exercise that much.")
		a: When_did_you_exercise (when * [last most recent]) ^factanswer("I don't remember.")
	u: (["work out" exercise ~exerciselist "physical activity" shape ]) ^reuse (Do_you_exercise)

#! Are you active
	u: Are_you_active (are you active)  ^factanswer("I am not that active.")
	u: (![sexually sexual $chiefcomplaint] [are you] * [active sedentary]) ^reuse (Are_you_active)
	u: (![sexually sexual $chiefcomplaint] [activity active] * [normally usually level ~timename]) ^reuse (Are_you_active)

#! How is your energy
	u: How_is_your_energy (how is your energy)  ^factanswer("It's fine.")
	u: ([energy tired]) ^reuse (How_is_your_energy)

#! Have you been resting
	u: Have_you_been_resting (have you been resting) 	 ^factanswer("I rest enough.")
		a: (how much) Since I can't work, about all I can do is rest.
	u: (!pain !does !help rest) ^reuse (Have_you_been_resting)

#! Have you been bedridden
	u: Have_you_been_bedridden (have you been bedridden) 	^factanswer("I have not been bedridden.")
	u: (!pain !does !help bedridden) ^reuse (Have_you_been_bedridden)

#! Are you able to drive
	u: Are_you_able_to_drive (are you able to drive) 	 ^factanswer("I am able to drive.")
	u: (!home [able can do] * drive) ^reuse (Are_you_able_to_drive)

#! Are you able to drive home
	u: Are_you_able_to_drive_home (are you able to drive home)  ^factanswer("I can drive.")
	u: ([able can] * drive * home) ^reuse (Are_you_able_to_drive_home)

