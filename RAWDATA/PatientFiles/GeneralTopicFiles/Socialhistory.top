#! Do you smoke
	u: Do_you_smoke (do you smoke)  ^factanswer("I have never smoked.")
	u: ([smoke smoker tobacco] >) ^reuse (Do_you_smoke)
	u: ([smoke chew use try] * [tobacco cigarettes pipe nicotine]) ^reuse (Do_you_smoke)
	u: ([tobacco cigarettes pipe nicotine] * [smoke chew use try]) ^reuse (Do_you_smoke)


#! Any other tobacco
	u: Any_other_tobacco (any other tobacco)  ^factanswer("I haven't touched tobacco.")
	u: ([any other] * tobacco) ^reuse (Any_other_tobacco)

