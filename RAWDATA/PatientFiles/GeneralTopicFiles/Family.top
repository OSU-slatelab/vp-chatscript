topic: ~parents_information keep repeat (~parents)

#! Are your parents living
	u: ARE_YOUR_PARENTS_LIVING
	([
		(~parents *~3 [alive living "with us"])
	])
	^factanswer("Both of my parents are alive and well.")
			a: (~grandparents)  ^reuse(~grandparents_information.ARE_YOUR_GRANDPARENTS_LIVING)
			a: ([age old]) ^reuse(~parents_information.HOW_OLD_ARE_YOUR_PARENTS)

#! How did your parents die
#! Did your parents pass away due to disease
	u: HOW_DID_PARENTS_DIE
		([
			(!old [how what] *~3 ~parents *~3 [die pass])
			(did *~3 ~parents [die pass] *~3 [due because to result])
		])
		^factanswer("They have not died.")
		a: (~grandparents)  ^reuse(~grandparents_information.HOW_DID_GRANDPARENTS_DIE)

#! How old are your parents
	u: HOW_OLD_ARE_YOUR_PARENTS
	([
 		(~age_words *~3 [they ~parents])
		(~ [his her their] age) # ~ means only if already in this topic
	])
	^factanswer("I am not exactly sure.")
		a: (~grandparents) ^reuse(~grandparents_information.HOW_OLD_ARE_YOUR_GRANDPARENTS)

#! Are your parents healthy
#! Do you parents have any illnesses
	u: ARE_YOUR_PARENTS_HEALTHY ([he she ~parents them they] *~3 [healthy health conditions issues concerns disease illness illnesses]) ^factanswer("Both of my parents are in good health.")
		a: (~grandparents)  ^reuse(~grandparents_information.ARE_YOUR_GRANDPARENTS_HEALTHY)

#! Tell me about your parents
	u: TELL_ME_ABOUT_YOUR_PARENTS ([tell health what how] *~3 [~parents folks ~itwords]) ^factanswer("My parents are both doing well. They've always been really healthy.")
		a: (~grandparents) ^reuse(~grandparents_information.TELL_ME_ABOUT_YOUR_GRANDPARENTS)

	#! Do your parents have any medical problems
		u: PARENTS_HAVE_ANY_MEDICAL_PROBLEMS
		([
			([~parents them] *~3 [chronic medical health] *~3 [problem issue illness condition illnesses])
			([chronic medical health] *~3 [problem issue illness condition illnesses] *~3 ~parents)
		])
		^factanswer("My parents are healthy.")
			a: (~grandparents) ^reuse(~grandparents_information.GRANDPARENTS_HAVE_ANY_MEDICAL_PROBLEMS)

#! Do you see your parents often
#! How often do you see your parents
		?: DO_YOU_SEE_YOUR_PARENTS_OFTEN (<< [see visit "spend time with"] ~parents >>) ^factanswer("I see my parents about once or twice a month.")

