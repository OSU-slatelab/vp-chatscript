topic: ~support_information keep repeat (abuse safe ~shelter live home relationship support system help friends people turn stress talk home)

#! Are you abused
	u: ARE_YOU_ABUSED
		([
			(!~druglist abuse) # !~druglist should exlude questions about abusing drugs
	 		([spouse husband wife boyfriend girlfriend] *~3 [hit abuse hurt])
		])
	^factanswer("I am not.")

#! Do you feel safe at home
	u: DO_YOU_FEEL_SAFE (![work job] [secure safe]) ^factanswer("I feel safe.")

#! Do you have support
	u: DO_YOU_HAVE_SUPPORT
		([
			(!who [support help] *~3 [~shelter system])
			(!who people *~3 [support help] *~3 [~shelter system])
			(!who people *~3 [support help])
			(!who [support friends])
		])
	^factanswer("I have support.")

#! Who supports you
	u: WHO_SUPPORTS_YOU (who * [support help turn talk])  ^factanswer("My family.")

#! Any problems at home
	u: ANY_PROBLEMS_AT_HOME (any [problem difficulty issue concern] *~3 home) ^factanswer("I have no concerns.")
