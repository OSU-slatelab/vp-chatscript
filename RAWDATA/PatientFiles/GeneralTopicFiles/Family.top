topic: ~children_information keep repeat (!~sibling !sibling !neonatalogist ~family_children  children kids family)

#! How many children do you have
	u: HOW_MANY_CHILDREN (![~sibling sibling] how [much many] [~family_children children kids]) ^factanswer("I don't have any children.")

#! How old are your children
	u: HOW_OLD_ARE_YOUR_CHILDREN
	([
		(~age_words *~3 [they he she ~family_children children kids baby])
		(their ages)
		([when what] *~3 [they he she ~family_children children kids baby] * [born delivered adopted])
	])
	^factanswer("I don't have any children.")

#! Are your children healthy
	u: ARE_YOUR_CHILDREN_HEALTHY
		([
			(![~sibling sibling] your * [~family_children children kids] * [healthy health well])
			(![~sibling sibling] [healthy health well] * your * [~family_children children kids])
		])
	^factanswer("I have no children.")

#! How are your children
	u: HOW_ARE_YOUR_CHILDREN (![~sibling sibling old many 'do] how * [~family_children children kids]) ^factanswer("I don't have any children.")

#! Where are your children
	u: WHERE_ARE_YOUR_CHILDREN
		([
			(![~sibling sibling old many 'do] [where] *~3 [~family_children children kids])
			(![~sibling sibling] [~family_children children kids] *~3 [live reside] *~3 [near close closeby])
		])
	^factanswer("I don't have any children.")

#! Do you want children
	u: DO_YOU_WANT_CHILDREN (![~sibling sibling] [want like desire hope] *~3 [~family_children children kids family] >)  ^factanswer("I do not want children.")

#! Do you have any children
	u: DO_YOU_HAVE_ANY_CHILDREN
		([
			(![~sibling sibling health] [have any] *~3 [~family_children children kids])
			(no children)
		])
			 ^factanswer("I have no children.")

#! What are your children named
	u: WHAT_ARE_YOUR_CHILDREN_NAMED (<< name [~family_children children kids] >>) ^factanswer("I have no children.")

#! Tell me about your children
	u: TELL_ME_ABOUT_YOUR_CHILDREN (![~sibling sibling neonatal neonatalogist how] [tell what] * [~family_children children kids]) ^factanswer("I have no children")

	#! Do your children have any medical problems
		u: CHILD_HAVE_ANY_MEDICAL_PROBLEMS
			([
				([~family_children them] *~3 [chronic medical health] *~3 [problem issue illness condition])
				([chronic medical health] *~3 [problem issue illness condition] *~3 ~family_children)
			])
		^factanswer("My children are healthy.")

